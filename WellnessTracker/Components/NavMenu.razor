@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="" aria-label="Wellness Tracker home">WellnessTracker</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column" aria-label="Main navigation">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                <span class="ms-1">Home</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-bar-chart-line" aria-hidden="true"></span>
                <span class="ms-1">Dashboard</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="habits">
                <span class="bi bi-journal-check" aria-hidden="true"></span>
                <span class="ms-1">Habits</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="goals">
                <span class="bi bi-flag" aria-hidden="true"></span>
                <span class="ms-1">Goals</span>
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <button type="button"
                            class="nav-link btn btn-link p-0 text-start"
                            @onclick="Logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span>
                        <span class="ms-1">Log out</span>
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="account/login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span>
                        <span class="ms-1">Log in</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="account/register">
                        <span class="bi bi-person-plus" aria-hidden="true"></span>
                        <span class="ms-1">Register</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private void Logout()
    {
        if (AuthStateProvider is WellnessTracker.Services.CustomAuthenticationStateProvider customProvider)
        {
            customProvider.NotifyUserLogout();
        }

        Nav.NavigateTo("/");
    }
}
